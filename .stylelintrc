{
  "extends": "stylelint-config-recommended",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "variants",
          "responsive",
          "screen",
          "mixin",
          "include",
          "extend",
          "each",
          "if",
          "else",
          "tailwind",
          "apply",
          "layer"
        ]
      }
    ],
    "declaration-block-trailing-semicolon": null,
    "no-descending-specificity": null,
  }
}
